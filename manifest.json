{
    "manifest_version": 3,
    "name": "AI Chat Extension",
    "version": "1.0",
    "description": "AI Chat Extension with custom functions",
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab"
    ],
    "host_permissions": [
        "https://api.ppinfra.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "options_page": "options.html",
    "web_accessible_resources": [
        {
            "resources": ["icon48.png"],
            "matches": ["<all_urls>"]
        }
    ]
}